<h1><%= @doctor.name %></h1>
<p>Department: <%= @doctor.department %></p>
<h2>Appointments:</h2>
<ul>
    <% @doctor.appointments.each do |app| %>
        <li><strong><%= app.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></strong>
            <ul>
                <li>Patient: <%= link_to app.patient.name, patient_path(app.patient) %></li>
            </ul>
        </li>
    <% end %>
</ul>