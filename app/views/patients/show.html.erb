<h1><%= @patient.name %></h1>
<h2>Appointments:</h2>
<ul>
    <% @patient.appointments.each do |app| %>
        <li><strong><%= app.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></strong>
            <ul>
                <li>Doctor: <%= link_to app.doctor.name, doctor_path(app.doctor) %></li>
            </ul>
        </li>
    <% end %>
</ul>